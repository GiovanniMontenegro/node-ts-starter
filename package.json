{
  "name": "node-ts-starter",
  "version": "1.0.2",
  "description": "Node TS Starter",
  "main": "app.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/app.ts",
    "dev": "nodemon",
    "dev-test": "nodemon -e ts  --exec \"ts-node -r tsconfig-paths/register ./src/test.ts\"",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "test": "nyc mocha -r ts-node/register 'src/**/*.spec.ts'",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "author": "Giovanni Montenegro",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/app.ts",
    "ext": "ts, js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GiovanniMontenegro/node-ts-starter.git"
  },
  "keywords": [
    "node",
    "typescript",
    "starter",
    "boilerplate"
  ],
  "bugs": {
    "url": "https://github.com/GiovanniMontenegro/node-ts-starter/issues"
  },
  "homepage": "https://github.com/GiovanniMontenegro/node-ts-starter#readme",
  "dependencies": {
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "auto-changelog": "^2.3.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0"
  }
}
